<body>
  <div class="container-fluid">
    <div class="logo-container">
      <%= image_tag 'temp_logo.png', class: "img-fluid smaller-logo", alt: "Logo" %>
    </div>

    <div class="d-flex flex-column justify-content-center align-items-center vh-100">
      <div class="text-center">
        <div class="d-inline-block text-left">
          <h2><%= @location.name %></h2>
          <div class="rounded-highlight">
            <%= @location.category %>
          </div>
          <div class="rounded-highlight">
              <%= "Address: #{@location.address}"%>
          </div>
        </div>
      </div>

      <br>
      <div class="text-center">
        <% @location.photos.each do |photo_url| %>
          <%= image_tag photo_url, width: "200" %>
        <% end %>

        <br><br>
        <%= image_tag 'coffee_logo.png', class: "img-fluid smaller-logo", alt: "Logo", style: "height: 55px; width: 80px" %>  

        <div class="rounded-container">
          <%= "Open Now" if @location.open_now %>
          <%= "Closed" if !@location.open_now %>
        </div>
        <div class="rounded-container"><%= @location.price %></div>
        <div class="rounded-container"><%= "Rating: #{@location.rating}"%></div>
          <a href="<%= new_third_space_path(params: { location_json: @location_json }) %>" class="rounded-button">Create a Third Space</a>
        <br>
      </div>
    </div>
  </div>
</body>
