<div class="container-sm d-flex justify-content-center align-items-center">
  <div class="text-center">
  <div class="mb-3">
    <%= link_to dashboard_path do %>
      <%= image_tag 'temp_logo.svg', class: "img-fluid", alt: "Logo" %>
    <% end %>
  </div>


    <%= form_with url: locations_path, method: :post, local: true do |form| %>
  <div class="mb-3 d-flex align-items-center">
    <div class="col-sm-2">
      <%= form.label :new_space, "new space", class: "form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :new_space, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 d-flex align-items-center">
    <div class="col-sm-2">
      <%= form.label :city, "city", class: "form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit "submit new space", class: "btn btn-primary" %>
  </div>
<% end %>