<body>
  <div class="container-fluid">
    <%= render partial: 'shared/navbar' %>

    <div class="container text-center">
      <div class="row justify-content-center align-items-center my-3">
        <div class="col-md-4 text-end"> 
          <h2><%= @space.name %></h2>
        </div>
        <div class="col-md-2 d-flex justify-content-center"> 
          <div class="rounded-highlight-b">
            <%= @space.category %>
          </div>
        </div>
        <div class="col-md-4 text-start"> 
          <% if @saved_yelp_ids.include?(@space.yelp_id) %>
            <form class="d-flex justify-content-end align-items-center" action="/third_spaces/unfavorite" method="delete">
              <button class="btn btn-outline-success" name="yelp_id" id="yelp_id" value="<%= @space.yelp_id %>" type="submit">Remove Favorite</button>
            </form>
          <% else %>
            <form class="d-flex justify-content-end align-items-center" action="/third_spaces/favorite" method="post">
              <button class="btn btn-outline-success" name="yelp_id" id="yelp_id" value="<%= @space.yelp_id %>" type="submit">Favorite</button>
            </form>
          <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center">
      <% if !@space.photos.nil? %>
        <% if @space.photos.class == String && !@space.photos == "[]" %>
          <%= image_tag @space.photos, width: "400", height: "350", class: "rounded-image" %>
        <% elsif @space.photos == "[]" %>
        <% elsif !@space.photos.include?("[") %>
          <%= image_tag @space.photos, width: "400", height: "350", class: "rounded-image" %>
        <% else %>
          <% JSON.parse(@space.photos).each do |photo_url| %>
            <%= image_tag photo_url, width: "400", height: "350", class: "rounded-image" %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <div class="container text-center">

      <% if current_user.admin? %>
        <%= button_to "Delete Third Space", third_space_path(params[:id]), method: :delete %>
      <% end %>
        
      <br>
      <div class="rounded-highlight-b">
      <%= image_tag 'purple_location.svg', alt: "Purple Location Icon", style: "margin-right: 5px;" %><%= @space.address %>
      </div>
      <br><br>

      <% if !@space.price.nil? %>
        <div class="rounded-container"><%= @space.price%></div>
      <% end %>
      <div class="rounded-container">Average Rating: <%= @avg_rating.round(1) %></div>
          
      <h3>Top Moods</h3>
      <%= render partial: 'top_moods' %>
    </div>

    <% @reviews.reject { |r| r.date.nil? }.sort_by { |r| r.date }.reverse.first(20).each do |r| %>
      <div class="rounded-highlight-custom">
        <%= r.text %> <br> - <%= r.name %> (Rating: <%= r.rating %>/5) <br> Date: <%= r.date %>
      </div>
      <br><br>
    <% end %>
  </div>
</div>

<div class="container-fluid text-center">
  <div class="d-flex justify-content-center align-items-center">
    <form class="me-2" action="/third_spaces/<%= @space.yelp_id %>/add_review" method="get">
      <button class="btn btn-outline-success" name="yelp_id" id="yelp_id" value="<%= @space.yelp_id %>" type="submit">Write A Review</button>
    </form>
    <%= link_to "See All Reviews", "/third_spaces/#{params[:id]}/all_reviews", class: "btn btn-outline-success" %>
  </div>
</div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
