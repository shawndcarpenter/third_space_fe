            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <% if !@customer_restrooms.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @customer_restrooms %></div>
      <% end %>

      <% if !@gn_restrooms.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @gn_restrooms %></div>
      <% end %>
    <% end %>

    <h4>Transportation</h4>
    <% if @parking_tag.nil? && @transportion_tag.nil? %>
            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
