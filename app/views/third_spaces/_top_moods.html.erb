<% if @mood_tags.nil? %>
  <h5>No information available</h5>
<% else %>
  <% @mood_tags.sort_by { |tag, freq| freq }.reverse.each do |tag, freq| %>
    <% if freq == 1 %>
      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px; display: flex; align-items: center; justify-content: space-between;">
        <span><%= tag %></span>
        <span style="display: flex; align-items: center;">
          <%= image_tag 'vote_icon.svg', alt: "Vote Icon", style: "margin-right: 5px;" %>
          <span><%= freq %></span>
        </span>
      </div>
    <% else %>
      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px; display: flex; align-items: center; justify-content: space-between;">
        <span><%= tag %></span>
        <span style="display: flex; align-items: center;">
          <%= image_tag 'vote_icon.svg', alt: "Vote Icon", style: "margin-right: 5px;" %>
          <span><%= freq %></span>
        </span>
      </div>
    <% end %>
  <% end %>
<% end %>

<h3>Accessibility Tags</h3>

<p>
  <button class="btn btn-outline-success btn-sm me-2" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Show/Hide
  </button>
</p>

<div class="collapse" id="collapseExample">
  <div class="align-self-center card card-body">

    <h4>Light and Noise Levels</h4>
    <% if @light_level.nil?  && @noise_level.nil? %>
            <h5>No information available</h5>
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <% if !@light_level.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @light_level %></div>
      <% end %>

      <% if !@noise_level.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @noise_level %></div>
      <% end %>
    <% end %>

    <h4>Staff Pushiness</h4>
    <% if @staff_tags.nil? %>
            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @staff_tags %></div>
    <% end %>

    <h4>Cost Factors</h4>
    <% if @purchase_necessary.nil? %>
            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @purchase_necessary %></div>
    <% end %>

    <h4>Sober Space</h4>
    <% if @sober_tag.nil? %>
            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @sober_tag %></div>
    <% end %>

    <h4>Restroom Needs</h4>
