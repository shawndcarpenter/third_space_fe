        </div>
    <% else %>
      <% if !@parking_tag.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @parking_tag %></div>
      <% end %>

      <% if !@transportion_tag.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @transportion_tag %></div>
      <% end %>
    <% end %>

    <h4>Wheelchair Accessibility</h4>
    <% if @accessible_tags.nil? %>
            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @accessible_tags %></div>
    <% end %>

    <h4>Identity</h4>
    <% if @bipoc_tag.nil? && @lgbt_tag.nil? && @gn_restrooms.nil? %>
            <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>
      <% if !@bipoc_tag.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @bipoc_tag %></div>
      <% end %>

      <% if !@lgbt_tag.nil? %>
        <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @lgbt_tag %></div>
      <% end %>
    <% end %>

    <h4>Family Needs</h4>
    <% if @child_friendly.nil? %>
      <h5>No information available 
      <div class="d-flex justify-content-center align-items-center">
        <%= link_to "Add More Tags", "/third_spaces/#{@space.yelp_id}/edit", class: "btn btn-outline-success btn-sm me-2 mt-2" %>
        </div>
    <% else %>

      <div class="rounded-highlight-b mx-auto" style="width: 300px; margin-bottom: 10px;"><%= @child_friendly %></div>
    <% end %>

  </div>
</div>
