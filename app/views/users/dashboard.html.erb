<div class="d-flex flex-column min-vh-100">
 <div class="container mt-5 flex-grow-1">
   <h1 class="display-4 text-center">Welcome to the Dashboard</h1>
     <!-- Navbar -->
     <nav class="navbar navbar-expand-lg navbar-light bg-light rounded custom-navbar">
       <div class="container-fluid">
        
         <!-- Search Form -->
         <form class="d-flex">
           <input class="form-control me-2" type="search" aria-label="Search">
           <button class="btn btn-outline-success" type="submit">Search</button>
         </form>

         <!-- Account Dropdown -->
         <ul class="navbar-nav">
           <li class="nav-item dropdown">
             <%= link_to "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", data: { bs_toggle: "dropdown" }, aria: { expanded: "false" } do %>
               <%= image_tag 'account_icon.png', alt: 'Account', class: 'navbar-account-icon' %>
             <% end %>
             <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
               <%= content_tag :li, (link_to "Profile", profile_path, class: "dropdown-item") %>
               <%= content_tag :li, (link_to "Privacy & Security", privacy_path, class: "dropdown-item") %>
               <%= content_tag :li, (link_to "Logout", logout_path, method: :delete, class: "dropdown-item") %>
             </ul>
           </li>
         </ul>
       </div>
     </nav>
 </div>


 <div class="mt-auto text-end pe-5 pb-5">
   <%= button_to "contact us", new_contact_form_path, method: :get, class: "btn btn-primary btn-sm" %>
 </div>




